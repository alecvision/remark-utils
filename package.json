{
  "name": "remark-utils",
  "version": "1.0.0",
  "description": "A set of utilities for writing remark plugins",
  "type": "module",
  "engines": {
      "node": ">=14.16"
  },
  "exports": "./index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts ./",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "env": {
        "es2020": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "unicorn",
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:unicorn/recommended"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alecvision/remark-utils.git"
  },
  "keywords": [
    "remark",
    "mdast",
    "unified",
    "markdown"
  ],
  "author": "Alec Helmturner <git@alecvision.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alecvision/remark-utils/issues"
  },
  "devDependencies": {
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.7.8",
    "@types/unist": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "typescript": "^4.7.4",
    "unified": "^10.1.2"
  },
  "dependencies": {
    "unist-util-is": "^5.1.1"
  }
}
